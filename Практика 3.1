using namespace std;

class book { //Объявляемсам класс
public:
	string style;//Объявляем переменные 
	string author;
	string title;
	int year;
	int price;

	void set()//ввод
	{
		cout << "Какой жанр?";
		getline(cin, style);
		cout << "Имя и фамилия автора:";
		getline(cin, author);
		cout << "Название:";
		getline(cin, title);
		cout << "Год:";
		cin >> year;
		cout << "Цена:";
		cin >> price;
		cout << "---------------------------------------" << endl;
	}
	void show()//вывод
	{
		cout << "Жанр:" << style << endl;
		cout << "Автор:" << author << endl;
		cout << "Название:" << title << endl;
		cout << "Год:" << year << endl;
		cout << "Цена:" << price << endl;
	}
};

