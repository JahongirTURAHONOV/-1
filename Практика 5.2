void sort(double *a, int n)
 {
	long i, j, k;
	cout << "Дробные числа сортируются" << endl;
	double x;
	for (i = 0; i < n; i++) 
	{ 
		k = i; x = a[i];

		for (j = i + 1; j < n; j++)
			if (a[j] < x) {
				k = j; x = a[j];
			}
		a[k] = a[i]; a[i] = x;
	}
	cout << "Окончание сортировки" << endl;
}
